+        case HLSL_CLASS_OBJECT:
+            return D3D_SVC_OBJECT;
+        case HLSL_CLASS_SCALAR:
+            return D3D_SVC_SCALAR;
+        case HLSL_CLASS_STRUCT:
+            return D3D_SVC_STRUCT;
+        case HLSL_CLASS_VECTOR:
