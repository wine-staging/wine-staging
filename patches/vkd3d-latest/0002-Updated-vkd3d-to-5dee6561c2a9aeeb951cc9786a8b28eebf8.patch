+static bool shader_is_sm_5_1(const struct vkd3d_shader_sm4_parser *sm4)
+{
+    const struct vkd3d_shader_version *version = &sm4->p.shader_version;
+
+    return version->major >= 5 && version->minor >= 1;
+}
