+    ins->flags = (opcode_token & VKD3D_SM4_SAMPLER_MODE_MASK) >> VKD3D_SM4_SAMPLER_MODE_SHIFT;
+    if (ins->flags & ~VKD3D_SM4_SAMPLER_COMPARISON)
